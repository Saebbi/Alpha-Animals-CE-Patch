<?xml version="1.0" encoding="utf-8" ?>
<Patch>
	<Operation Class="PatchOperationSequence">
		<success>Always</success>
		<operations>
		
			<li Class="ModCheck.isModLoaded">
				<modName>Alpha Animals</modName>
				<yourMod>Alpha Animals CE Patch</yourMod>
			</li>
	
			<li Class="PatchOperationAddModExtension">
				<xpath>*/ThingDef[defName="AA_Slurrypede"]</xpath>
				<value>
				<li Class="CombatExtended.RacePropertiesExtensionCE">
					<bodyShape>Quadruped</bodyShape>
				</li>
				</value>
			</li>
						
			<li Class="PatchOperationAdd">
				<xpath>*/ThingDef[defName="AA_Slurrypede"]/statBases</xpath>
				<value>
				<MeleeDodgeChance>0.12</MeleeDodgeChance>
				<MeleeCritChance>0.1</MeleeCritChance>
				</value>
			</li>
			
			<li Class="PatchOperationReplace">
				<xpath>*/ThingDef[defName="AA_Slurrypede"]/tools</xpath>
				<value>
					<tools>
						<li Class="CombatExtended.ToolCE">
							<label>head</label>
							<capacities>
								<li>Blunt</li>
							</capacities>
							<power>8</power>
							<cooldownTime>2.6</cooldownTime>
							<linkedBodyPartsGroup>HeadAttackTool</linkedBodyPartsGroup>
							<armorPenetration>0.16</armorPenetration>
						</li>
					</tools>
				</value>
			</li>
		</operations>
	</Operation>
</Patch>
